gh = github_repo("siderolabs/talos")

release = gh.latest_release()

os_str = {
   "linux": "linux",
   "macos": "darwin",
}[os]

arch_str = {
    "x86_64": "amd64",
    "aarch64": "arm64",
}[arch]

asset = release.get_asset_url("talosctl-{os_str}-{arch_str}".format(os_str=os_str, arch_str=arch_str))

install_binary(download_asset(asset, 128*1024*1024), "talosctl")
